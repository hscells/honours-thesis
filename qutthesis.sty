%%%%
%%%% RENEW CHAPTER
%%%%
\renewcommand\chapter{\if@openright\cleardoublepage\else\clearpage\fi
                    \thispagestyle{plain}%
                    \global\@topnum\z@
                    \@afterindentfalse
                    \secdef\@chapter\@schapter}
\def\@chapter[#1]#2{\ifnum \c@secnumdepth >\m@ne
                         \refstepcounter{chapter}%
                         \typeout{\@chapapp\space\thechapter.}%
                         \addcontentsline{toc}{chapter}%
                                   {\protect\numberline{\thechapter}#2}% chenged from {#1}: Full headings in TOC
                    \else
                      \addcontentsline{toc}{chapter}{#2}%  changed from {#1}: Full headings in TOC
                    \fi
                    \chaptermark{#1}%	{#1}  running title on top of each page
                    \addtocontents{lof}{\protect\addvspace{10\p@}}%
                    \addtocontents{lot}{\protect\addvspace{10\p@}}%
                    \if@twocolumn
                      \@topnewpage[\@makechapterhead{#2}]%
                    \else
                      \@makechapterhead{#2}%
                      \@afterheading
                    \fi
}
\def\@makechapterhead#1{%
  \vspace*{30\p@}       %changed from 50 to 30
  {\parindent \z@ \raggedright \normalfont
    \ifnum \c@secnumdepth >\m@ne
        \LARGE\bfseries \@chapapp\space \thechapter     %changed from Huge to LARGE
        \par\nobreak
        \vskip 20\p@   %changed from 20 to 10
    \fi
    \interlinepenalty\@M
    \LARGE \bfseries #1\par\nobreak                     %Changed from huge
    \hrulefill      %This line is added on 25 Sept 2002
    \vskip 20\p@        %changed from 40 to 20
  }
}
\def\@schapter#1{\if@twocolumn
                   \@topnewpage[\@makeschapterhead{#1}]%
                 \else
                   \@makeschapterhead{#1}%
                   \@afterheading
                 \fi}
\def\@makeschapterhead#1{%
  \vspace*{30\p@}       %changed from 50 to 30
  {\parindent \z@ \raggedright
    \normalfont
    \interlinepenalty\@M
    \LARGE \bfseries  #1\par\nobreak    %changed from Huge to LARGE
    \hrulefill                          %This line is added on 25 Sept 2002
    \vskip 20\p@                    %changed from 40 to 20
  }}

